@model MobileNumberDiery.Models.DieryRecord

@{
    ViewBag.Title = "RegisterContact";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<h2 style="font-family:'Times New Roman';font-size:50px;text-align:center;color:#b200ff;font-weight:bold">Register Contact</h2>

