            </div>
        </div>
        <hr />
        <div class="form-group row">
            <h2 style="font-family:'Times New Roman';font-size:20px">
                @Html.LabelFor(model => model.Person_FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
            </h2>
            <div class="col-md-3">
                @Html.EditorFor(model => model.Person_FirstName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Person_FirstName, "", new { @class = "text-danger" })
            </div>

            <h2 style="font-family:'Times New Roman';font-size:20px">
